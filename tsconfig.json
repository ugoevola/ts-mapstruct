{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "target": "es2021",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "outDir": "./dist",
    "incremental": true,
    "resolveJsonModule": true,
    "typeRoots": [ "./types", "./node_modules/@types"],
    "allowJs": true
  },
  "includes": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "./dist/**/*", "**/*spec.ts", "typings"]
}
